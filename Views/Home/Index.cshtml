@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido a Series Gato</h1>
    <p>La mejor informacion de tus series favoritas</a>.</p>
</div>

<div class="container">
    <div class="row">
        @foreach (Serie item in ViewBag.Series)
        {
            <div class="col-12 col-md-4 pb-4">
                <div class="card w-100">
                    <img src="@item.ImagenSerie" class="card-img-top" alt="@item.Nombre">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <a class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" onclick="GetTemporadas(@item.IdSerie,'@item.Nombre')">Temporadas</a>
                        <a class="btn btn-success" data-toggle="modal" data-target="#exampleModal" onclick="GetActores(@item.IdSerie,'@item.Nombre')">Actores</a>
                        <a class="btn btn-warning" data-toggle="modal" data-target="#exampleModal" onclick="GetInfo(@item.IdSerie)">Mas info</a>
                    </div>
                </div>                
            </div>
        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="ModalBody">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>